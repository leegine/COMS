@------------------------------------------------------------------
-- Autogenerated per-table triggers for mutators
------------------------------------------------------------------

--------------------------------------------------
--- display_condition

create trigger inv_display_condition_ins
  after insert on display_condition
  for each row
  declare
  begin
    invalidation.on_mutate( 'display_condition', 'ins', 0, :new.display_condition_id );
  end;
/
show errors

create trigger inv_display_condition_upd
  before update on display_condition
  for each row
  declare
  begin
    invalidation.on_mutate( 'display_condition', 'upd', 0, :old.display_condition_id );
  end;
/
show errors

create trigger inv_display_condition_del
  before delete on display_condition
  for each row
  declare
  begin
    invalidation.on_mutate( 'display_condition', 'del', 0, :old.display_condition_id );
  end;
/
show errors

--------------------------------------------------
--- display_contents

create trigger inv_display_contents_ins
  after insert on display_contents
  for each row
  declare
  begin
    invalidation.on_mutate( 'display_contents', 'ins', 0, :new.display_contents_id );
  end;
/
show errors

create trigger inv_display_contents_upd
  before update on display_contents
  for each row
  declare
  begin
    invalidation.on_mutate( 'display_contents', 'upd', 0, :old.display_contents_id );
