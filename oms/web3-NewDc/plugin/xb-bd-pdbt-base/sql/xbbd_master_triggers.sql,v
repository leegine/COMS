  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_traded_product', 'upd', 0, :old.traded_product_id );
  end;
/
show errors

create trigger inv_bond_traded_product_del
  before delete on bond_traded_product
  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_traded_product', 'del', 0, :old.traded_product_id );
  end;
/
show errors

--------------------------------------------------
--- bond_traded_product_updq

create trigger inv_bond_traded_product_up_ins
  after insert on bond_traded_product_updq
  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_traded_product_updq', 'ins', 0, :new.traded_product_id||','||:new.valid_for_biz_date );
  end;
/
show errors

create trigger inv_bond_traded_product_up_upd
  before update on bond_traded_product_updq
  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_traded_product_updq', 'upd', 0, :old.traded_product_id||','||:old.valid_for_biz_date );
  end;
/
show errors

create trigger inv_bond_traded_product_up_del
  before delete on bond_traded_product_updq
  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_traded_product_updq', 'del', 0, :old.traded_product_id||','||:old.valid_for_biz_date );
  end;
/
show errors

@
