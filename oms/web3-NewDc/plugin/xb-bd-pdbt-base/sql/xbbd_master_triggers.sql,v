@------------------------------------------------------------------
-- Autogenerated per-table triggers for mutators
------------------------------------------------------------------

--------------------------------------------------
--- bond_product

create trigger inv_bond_product_ins
  after insert on bond_product
  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_product', 'ins', 0, :new.product_id );
  end;
/
show errors

create trigger inv_bond_product_upd
  before update on bond_product
  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_product', 'upd', 0, :old.product_id );
  end;
/
show errors

create trigger inv_bond_product_del
  before delete on bond_product
  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_product', 'del', 0, :old.product_id );
  end;
/
show errors

--------------------------------------------------
--- bond_traded_product

create trigger inv_bond_traded_product_ins
  after insert on bond_traded_product
  for each row
  declare
  begin
    invalidation.on_mutate( 'bond_traded_product', 'ins', 0, :new.traded_product_id );
  end;
/
show errors

