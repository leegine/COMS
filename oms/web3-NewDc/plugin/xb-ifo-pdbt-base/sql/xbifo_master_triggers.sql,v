@------------------------------------------------------------------
-- Autogenerated per-table triggers for mutators
------------------------------------------------------------------

--------------------------------------------------
--- ifo_product

create trigger inv_ifo_product_ins
  after insert on ifo_product
  for each row
  declare
  begin
    invalidation.on_mutate( 'ifo_product', 'ins', 0, :new.product_id );
  end;
/
show errors

create trigger inv_ifo_product_upd
  before update on ifo_product
  for each row
  declare
  begin
    invalidation.on_mutate( 'ifo_product', 'upd', 0, :old.product_id );
  end;
/
show errors

create trigger inv_ifo_product_del
  before delete on ifo_product
  for each row
  declare
  begin
    invalidation.on_mutate( 'ifo_product', 'del', 0, :old.product_id );
  end;
/
show errors

--------------------------------------------------
