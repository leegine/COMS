  after insert on ifo_traded_product_updq
  for each row
  declare
  begin
    invalidation.on_mutate( 'ifo_traded_product_updq', 'ins', 0, :new.traded_product_id||','||:new.valid_for_biz_date );
  end;
/
show errors

